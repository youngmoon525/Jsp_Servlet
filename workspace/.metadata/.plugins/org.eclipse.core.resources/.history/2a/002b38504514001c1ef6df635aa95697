<%@page import="com.hanul.study.BookDTO"%>
<%@page import="com.hanul.study.BookDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%
String isbn = request.getParameter("isbn");
BookDAO dao = new BookDAO();
BookDTO dto = dao.detailBook(isbn);
pageContext.setAttribute("dto", dto);
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Detail JSP</title>
<style type="text/css">
.in{
	background-color: yellow;
}
</style>
<script type="text/javascript">
function fnSubmit(){
	if(confirm("정말 수정하시겠습니까?")){
		return true;
	}
	return false;
}
function fnReset(){
	var msg = "입력하신 내용이 초기화됩니다.";
	msg += "\n계속 진행하시겠습니까?";
	if(confirm(msg)){
		return true;
	}
	return false;
}
</script>
</head>
<body>
<div align="center">
<h3>[도서정보 수정화면]</h3>
<form action="update.jsp" method="post" onsubmit="return fnSubmit()" onreset="return fnReset()">
<table border="1">
	<tr>
		<th>도서명</th>
		<td><input type="text" name="title" value="${dto.title }" class="in"/></td>
	</tr>
	<tr>
		<th>저자</th>
		<td><input type="text" name="name" value="${dto.name }" class="in"/></td>
	</tr>
	<tr>
		<th>ISBN</th>
		<td>${dto.isbn }</td>
	</tr>
	<tr>
		<th>출판사</th>
		<td><input type="text" name="company" value="${dto.company}" class="in"/></td>
	</tr>
	<tr>
		<th>단가</th>
		<td><input type="number" name="cost" value="${dto.cost }" min="0" class="in"/></td>
	</tr>
	<tr>
		<th>수량</th>
		<td><input type="number" name="qty" value="${dto.qty }" min="0" class="in"/></td>
	</tr>
	<tr>
		<td colspan="2" align="center">
			<input type="submit" value="수정하기"/>
			<input type="reset" value="초기화하기"/>
			<input type="button" value="도서정보등록" onclick="location.href='bookMain.html'"/> 
		</td>
	</tr>
</table>
</form>
</div>
</body>
</html>